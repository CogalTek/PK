generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model User {
    id         String      @id @default(cuid())
    kindeId    String      @unique
    email      String      @unique
    firstName  String?
    lastName   String?
    picture    String?
    createdAt  DateTime    @default(now())
    updatedAt  DateTime    @updatedAt
    devices    Device[]
    wakeOnLans WakeOnLan[]
    calendars  Calendar[]
    todos      Todo[]
    games      Game[]
    servers    Server[]
}

model Device {
    id         String      @id @default(cuid())
    ownerId    String
    owner      User        @relation(fields: [ownerId], references: [id], onDelete: Cascade)
    macAddress String
    name       String?
    createdAt  DateTime    @default(now())
    updatedAt  DateTime    @updatedAt
    wakeOnLans WakeOnLan[]

    @@index([ownerId])
}

model WakeOnLan {
    id          String    @id @default(cuid())
    ownerId     String
    owner       User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
    name        String
    description String?
    deviceId    String
    device      Device    @relation(fields: [deviceId], references: [id], onDelete: Cascade)
    calendarId  String?
    calendar    Calendar? @relation(fields: [calendarId], references: [id], onDelete: SetNull)
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    @@index([ownerId])
    @@index([deviceId])
    @@index([calendarId])
}

model Calendar {
    id         String             @id @default(cuid())
    ownerId    String
    owner      User               @relation(fields: [ownerId], references: [id], onDelete: Cascade)
    name       String?
    createdAt  DateTime           @default(now())
    updatedAt  DateTime           @updatedAt
    wakeOnLans WakeOnLan[]
    dateTimes  DateTimeSchedule[]

    @@index([ownerId])
}

model DateTimeSchedule {
    id         String   @id @default(cuid())
    calendarId String
    calendar   Calendar @relation(fields: [calendarId], references: [id], onDelete: Cascade)
    day        Int // 0 = Dimanche, 1 = Lundi, ..., 6 = Samedi
    hours      String // Format "HH:mm" (ex: "08:30")
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@index([calendarId])
}

model Todo {
    id          String   @id @default(cuid())
    ownerId     String
    owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
    name        String
    status      Boolean  @default(false)
    description String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@index([ownerId])
}

model Game {
    id          String   @id @default(cuid())
    ownerId     String
    owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

    name        String
    type        String   // "docker", "gsm", "linuxgsm"

    image       String?  // pour docker
    gsmCommand  String?  // pour GSM
    startCmd    String?
    stopCmd     String?

    volumes     String[] // ["./data/mc:/data"]
    env         Json?    // { ENV_VAR: "value" } - Configuration par défaut
    ports       Int[]    // [25565, 19132]

    schemaId    String?  // ID du schema de configuration (ex: "minecraft-java", "valheim")
    
    // Options Docker avancées
    dockerUser      String?  // ex: "1000:1000" ou "root" - Pour les permissions
    dockerPrivileged Boolean @default(false) // Mode privilégié pour certains serveurs
    dockerRestart   String?  // ex: "unless-stopped" - Politique de redémarrage

    status      Boolean  @default(false)
    public      Boolean  @default(false)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    servers     Server[] // relation 1-N: un Game peut avoir plusieurs instances Server

    @@index([ownerId])
}

model Server {
    id                String   @id @default(cuid())
    ownerId           String
    owner             User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

    gameId            String
    game              Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

    name              String   // nom custom de l'instance (ex: "MC Survie - Saison 2")
    type              String   // "docker" | "linuxgsm"

    dockerContainerId String?  // ID du container Docker si type=docker
    gsmPid            String?  // PID ou handle si type=linuxgsm

    host              String   @default("localhost") // pour remote hosts futurs
    ports             Json?    // ports exposés réels {"25565": 25565, "19132": 19132}
    env               Json?    // variables d'environnement spécifiques à cette instance

    status            String   @default("STOPPED") // STOPPED | STARTING | RUNNING | STOPPING | FAILED
    logs              String?  // derniers logs ou message d'erreur

    createdAt         DateTime @default(now())
    updatedAt         DateTime @updatedAt

    @@index([ownerId])
    @@index([gameId])
}
